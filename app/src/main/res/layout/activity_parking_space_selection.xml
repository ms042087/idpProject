<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHLLparkingSpace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.idpproject.chooseCarpark">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="470dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/carpark1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/spaceAG"
        android:layout_width="38dp"
        android:layout_height="38dp"

        android:layout_marginEnd="64dp"

        android:layout_marginRight="64dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/greenbt"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/spaceBG"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:src="@drawable/greenbt"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/spaceBR"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:src="@drawable/redbt"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/spaceAR"
        android:layout_width="38dp"
        android:layout_height="38dp"


        android:layout_marginEnd="62dp"

        android:layout_marginRight="62dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/redbt"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>